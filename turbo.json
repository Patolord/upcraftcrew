{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"dist/**",
				"build/**"
			],
			"env": [
				"NEXT_PUBLIC_*",
				"CONVEX_DEPLOYMENT",
				"CONVEX_URL"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"check-types": {
			"dependsOn": ["^check-types"],
			"outputs": []
		},
		"lint": {
			"dependsOn": ["^lint"],
			"outputs": []
		},
		"format": {
			"outputs": []
		}
	},
	"globalEnv": [
		"NODE_ENV"
	]
}

