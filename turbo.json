{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": [
		"NODE_ENV",
		"CONVEX_DEPLOY_KEY",
		"BETTER_AUTH_SECRET",
		"GOOGLE_CLIENT_ID",
		"GOOGLE_CLIENT_SECRET",
		"RESEND_API_KEY",
		"SITE_URL",
		"NEXT_PUBLIC_SITE_URL"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"],
			"env": [
				"NODE_ENV",
				"CONVEX_DEPLOY_KEY",
				"NEXT_PUBLIC_CONVEX_URL",
				"BETTER_AUTH_SECRET",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"RESEND_API_KEY",
				"SITE_URL",
				"NEXT_PUBLIC_SITE_URL"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		}
	}
}

